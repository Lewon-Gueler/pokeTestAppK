<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtAbi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Ability 1 :"
        android:textColor="@color/colorwhite"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAbility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorwhite"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/txtAbi"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAbi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Ability 2 :"
        android:textSize="16dp"
        android:textColor="@color/colorwhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAbi" />

    <TextView
        android:id="@+id/txtAbility2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorwhite"
        app:layout_constraintStart_toEndOf="@+id/txtAbi2"
        app:layout_constraintTop_toBottomOf="@+id/txtAbility" />
</androidx.constraintlayout.widget.ConstraintLayout>